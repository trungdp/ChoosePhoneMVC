        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 border-dark mx-4">
                <input type="submit" value="Thêm bài viết" class="btn btn-default border-dark border-10" />
                <div>
                    @Html.ActionLink("Quay lại", "Index")
                </div>
            </div>
        </div>
    </div>
}
