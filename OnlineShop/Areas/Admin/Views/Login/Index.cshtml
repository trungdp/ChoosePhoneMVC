
@{
    Layout = null;
}
@model OnlineShop.Areas.Admin.Models.LoginModel

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Login</title>

    <!-- Custom fonts for this template-->
    <link href="/Assets/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/Assets/admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary vh-100" cz-shortcut-listen="true">

    <div class="container h-100">

        <!-- Outer Row -->
        <div class="row justify-content-center h-75">

            <div class="col-xl-10 col-lg-12 col-md-9 h-100">

                <div class="card o-hidden border-0 shadow-lg my-5 h-100">
                    <div class="card-body p-0 h-100">
                        <!-- Nested Row within Card Body -->
                        <div class="row h-100">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    
                                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                    {
                                        @Html.ValidationSummary(false,"",new {@class="alert-danger"})
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control form-control-user",@id="exampleInputEmail",@placeholder="Nhập tên người dùng",@autofocus="autofocus" })
                                        </div>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Pasword, new { @class = "form-control form-control-user",@type="password", @id = "exampleInputPassword", @placeholder = "Nhập mật khẩu", @autofocus = "autofocus" })
                                            
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                @Html.CheckBoxFor(model=>model.RememberMe, new {@class="custom-control-input" ,@id="customCheck"})
                                                <label class="custom-control-label" for="customCheck">Remember Me</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/Assets/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/Assets/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/Assets/admin/js/sb-admin-2.min.js"></script>
</body>

</html>

